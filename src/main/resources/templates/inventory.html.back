<!DOCTYPE html>
<html xmlns:th="http://www.thymeleaf.org">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>WMS仓库管理系统 - 出入库管理</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    <style>
        /* 页面整体样式 */
        body {
            min-height: 100vh;
            background-color: #f8f9fa;
        }

        /* 侧边栏样式 */
        .sidebar {
            background-color: #343a40;
            color: white;
            height: 100vh;
            position: fixed;
            overflow-y: auto;
        }

        /* 侧边栏链接样式 */
        .sidebar a {
            color: #ddd;
            text-decoration: none;
        }

        /* 侧边栏链接悬停和焦点样式 */
        .sidebar a:hover, .sidebar a:focus {
            color: white;
            background-color: #495057;
        }

        /* 侧边栏激活链接样式 */
        .sidebar .nav-link.active {
            background-color: #0d6efd;
            color: white;
        }

        /* 主内容区域样式 */
        .main-content {
            margin-left: 250px;
            padding: 20px;
        }

        /* 表格容器样式 */
        .table-responsive {
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            border-radius: 5px;
        }

        /* 表格头部样式 */
        .table th {
            background-color: #e9ecef;
        }

        /* 状态标签样式 */
        .status-badge {
            font-size: 0.8em;
        }

        /* 入库标签样式 */
        .in-badge {
            background-color: #d4edda;
            color: #155724;
        }

        /* 出库标签样式 */
        .out-badge {
            background-color: #f8d7da;
            color: #721c24;
        }

        /* 筛选区域样式 */
        .filter-section {
            background-color: #fff;
            padding: 15px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            margin-bottom: 20px;
        }

        /* 表单组样式 */
        .form-group {
            margin-bottom: 15px;
        }

        /* 模态框内容样式 */
        .modal-content {
            border-radius: 10px;
        }

        /* 主要按钮样式 */
        .btn-primary {
            background-color: #0d6efd;
            border-color: #0d6efd;
        }

        /* 主要按钮悬停样式 */
        .btn-primary:hover {
            background-color: #0b5ed7;
            border-color: #0a58ca;
        }

        /* 分页样式 */
        .pagination {
            justify-content: center;
            margin-top: 20px;
        }

        /* 激活的分页项样式 */
        .page-item.active .page-link {
            background-color: #0d6efd;
            border-color: #0d6efd;
        }

        /* 分页链接样式 */
        .page-link {
            color: #0d6efd;
        }

        /* 分页链接悬停样式 */
        .page-link:hover {
            color: #0a58ca;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- 左侧导航菜单 -->
            <nav class="col-md-3 col-lg-2 d-md-block sidebar collapse">
                <div class="position-sticky pt-3">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link" href="/">
                                <i class="bi bi-speedometer2 me-2"></i>
                                主面板
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/parts-query">
                                <i class="bi bi-search me-2"></i>
                                零件信息查询
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/warehouse">
                                <i class="bi bi-house-door me-2"></i>
                                仓库管理
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" href="/inventory">
                                <i class="bi bi-arrow-left-right me-2"></i>
                                出入库管理
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/ai-assistant">
                                <i class="bi bi-robot me-2"></i>
                                AI助手
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>

            <!-- 页面内容 -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 main-content">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2">出入库管理</h1>
                    <!-- 新建记录按钮 -->
                    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#newRecordModal">
                        <i class="bi bi-plus-circle me-1"></i>新建记录
                    </button>
                </div>

                <!-- 筛选区域 -->
                <div class="filter-section">
                    <div class="row">
                        <div class="col-md-6">
                            <h5>筛选条件</h5>
                            <form th:action="@{/inventory}" method="get" class="d-flex align-items-center">
                                <div class="me-2">
                                    <select name="type" class="form-select">
                                        <option value="">全部记录</option>
                                        <option value="IN" th:selected="${selectedType == 'IN'}">入库记录</option>
                                        <option value="OUT" th:selected="${selectedType == 'OUT'}">出库记录</option>
                                    </select>
                                </div>
                                <div>
                                    <button type="submit" class="btn btn-outline-primary">筛选</button>
                                    <a th:href="@{/inventory}" class="btn btn-outline-secondary">清除筛选</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

                <!-- 出入库记录表格 -->
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>记录类型</th>
                                <th>零件编号</th>
                                <th>零件名称</th>
                                <th>规格</th>
                                <th>数量</th>
                                <th>仓库</th>
                                <th>操作人</th>
                                <th>时间</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr th:if="${inventoryRecords.isEmpty()}">
                                <td colspan="8" class="text-center">暂无出入库记录</td>
                            </tr>
                            <tr th:each="record : ${inventoryRecords}">
                                <td>
                                    <span th:if="${record.type == 'IN'}" class="badge in-badge status-badge">入库</span>
                                    <span th:if="${record.type == 'OUT'}" class="badge out-badge status-badge">出库</span>
                                </td>
                                <td th:text="${record.itemCode}">零件编号</td>
                                <td th:text="${record.itemName}">零件名称</td>
                                <td th:text="${record.specification ?: '-'}">规格</td>
                                <td th:text="${record.quantity}">数量</td>
                                <td th:text="${record.warehouse ?: '-'}">仓库</td>
                                <td th:text="${record.operator ?: '-'}">操作人</td>
                                <td th:text="${#temporals.format(record.time, 'yyyy-MM-dd HH:mm:ss')}">时间</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                
                <!-- 统计信息 -->
                <div class="row mt-4">
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">总记录数</h5>
                                <p class="card-text display-6" th:text="${inventoryRecords.size()}">0</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">入库记录</h5>
                                <p class="card-text display-6" th:text="${inCount}">0</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">出库记录</h5>
                                <p class="card-text display-6" th:text="${outCount}">0</p>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <!-- 新建记录弹窗 -->
    <div class="modal fade" id="newRecordModal" tabindex="-1" aria-labelledby="newRecordModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="newRecordModalLabel">新建出入库记录</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="inventoryForm" th:action="@{/inventory}" method="post">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="type" class="form-label">记录类型 *</label>
                                    <select class="form-select" id="type" name="type" required>
                                        <option value="">请选择记录类型</option>
                                        <option value="IN">入库</option>
                                        <option value="OUT">出库</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="itemCode" class="form-label">零件编号 *</label>
                                    <input type="text" class="form-control" id="itemCode" name="itemCode" required>
                                </div>
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="itemName" class="form-label">零件名称 *</label>
                                    <input type="text" class="form-control" id="itemName" name="itemName" required>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="quantity" class="form-label">数量 *</label>
                                    <input type="number" class="form-control" id="quantity" name="quantity" min="1" required>
                                </div>
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="specification" class="form-label">规格</label>
                                    <input type="text" class="form-control" id="specification" name="specification">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="warehouse" class="form-label">仓库</label>
                                    <input type="text" class="form-control" id="warehouse" name="warehouse">
                                </div>
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="operator" class="form-label">操作人</label>
                                    <input type="text" class="form-control" id="operator" name="operator">
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">取消</button>
                    <button type="button" class="btn btn-primary" id="saveRecordBtn">保存记录</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // 页面加载完成后绑定事件
        document.addEventListener('DOMContentLoaded', function() {
            // 保存记录按钮点击事件
            document.getElementById('saveRecordBtn').addEventListener('click', function() {
                // 表单验证
                const type = document.getElementById('type').value;
                const itemCode = document.getElementById('itemCode').value;
                const itemName = document.getElementById('itemName').value;
                const quantity = document.getElementById('quantity').value;
                
                if (!type || !itemCode || !itemName || !quantity) {
                    alert('请填写所有必填字段');
                    return false;
                }
                
                if (quantity <= 0) {
                    alert('数量必须大于0');
                    return false;
                }
                
                // 提交表单
                document.getElementById('inventoryForm').submit();
            });
            
            // 模态框关闭后清空表单
            const modal = document.getElementById('newRecordModal');
            modal.addEventListener('hidden.bs.modal', function () {
                // 重置表单
                document.getElementById('inventoryForm').reset();
            });
        });
    </script>
</body>
</html>